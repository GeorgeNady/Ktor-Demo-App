<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/auth_edit_text_bg"
    android:padding="@dimen/_15sdp"
    android:layout_margin="@dimen/_15sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:layout_width="@dimen/_124sdp"
        android:layout_height="@dimen/_124sdp"
        android:src="@drawable/ktor"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ktor_demo_app"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:textColor="@color/p_text"
        android:textStyle="bold" />

</LinearLayout>